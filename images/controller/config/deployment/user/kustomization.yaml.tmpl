apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{.Namespace}}
namePrefix: {{.FullName}}-
commonLabels:
  app.kubernetes.io/name: {{.App}}
  app.kubernetes.io/instance: {{.FullName}}
  app.kubernetes.io/managed-by: pod-broker
commonAnnotations:
  app.broker/user: {{.User}}
resources:
{{- range .Resources }}
- {{ . }}
{{- end }}
{{- if .Patches }}
patches:
{{- range .Patches }}
- {{ . }}
{{- end }}
{{- end }}

{{- if or .JSONPatchesService .JSONPatchesVirtualService }}
patchesJson6902:
{{- range .JSONPatchesService }}
- target:
    version: v1
    kind: Service
    name: {{$.ServiceName}}
  path: {{ . }}
{{- end }}
{{- range .JSONPatchesVirtualService }}
- target:
    group: networking.istio.io
    version: v1alpha3
    kind: VirtualService
    name: {{$.ServiceName}}
  path: {{ . }}
{{- end }}
{{- end }}
